{
    "manifest_version": 3,
    "name": "Torn Poker Helper",
    "version": "0.1.0",
    "description": "Helper for Torn Poker.",
    "icons": {
      "48": "icons/icon.png"
    },
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "*://tornteampoker.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["*://www.torn.com/page.php?sid=holdem"],
        "css": ["styles.css"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_icon": "icons/icon.png",
      "default_title": "Torn Poker Helper"
    }
  }